#!/bin/sh

RESOLV_CONF="/etc/resolv.conf"

case "$1" in
	renew|bound)
		echo -n > $RESOLV_CONF
		[ -n "$domain" ] && echo search $domain >> $RESOLV_CONF
		for i in $dns; do
			echo nameserver $i >> $RESOLV_CONF
		done

		metric=0
		for i in $router; do
			route add default gw $i dev $interface metric $((metric++))
			# route add -net 224.0.0.0 netmask 240.0.0.0 gw $i
		done
	;;
esac

exit 0
